{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}


<main class="main">
  {{#with data}}
  <div class="main__content">
    <h1 class="title title--center">Додати до плейлиста</h1>


    <form method='POST' action="/spotify-search" class="search">
      <img src="/svg/spotify-search.svg">
      <input type="search" class="search__input" placeholder="Введіть запит" name="value" value="{{value}}" />
      <button class="search__button">Пошук</button>
    </form>

    <form method='POST' action="/spotify-track-add">
      <ul class="track__list">
        {{#each tracks}}
        <li class="track">
          <img src="{{image}}" alt="{{name}}" height="100px">
          <div class="track__content">
            <strong class="track__name">{{name}} </strong>
            <em class="track__author">{{author}} </em>
          </div>
          <a href="/spotify-track-add?playlistId={{../playlistId}}&trackId={{id}}">
            <img src="/svg/add.svg">
          </a>

        </li>
        {{/each}}
      </ul>

    </form>
  </div>
  {{/with}}
</main>

